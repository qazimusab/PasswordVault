<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trendoidtechnologies.vault">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/vault"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.DepartmentsActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.ComputersActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.CredentialsActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.AddDepartmentActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.AddComputerActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.AddCredentialActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.EditCredentialActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.AddUserActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.EditUserActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ui.activities.UsersActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
